{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ai-photo-playground/database": ["database/src/index.ts"],
      "@ai-photo-playground/restore-photo/shell": [
        "libs/restore-photo/shell/src/index.ts"
      ],
      "@ai-photo-playground/restore-photo/upload-file": [
        "libs/restore-photo/upload-file/src/index.ts"
      ],
      "@ai-photo-playground/shared-ui": ["libs/shared-ui/src/index.ts"],
      "@ai-photo-playground/shared/data-access": [
        "libs/shared/data-access/src/index.ts"
      ],
      "@ai-photo-playground/shared/environments": [
        "libs/shared/environments/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
